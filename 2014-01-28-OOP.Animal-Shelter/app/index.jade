doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Animal Shelter
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Animal Shelter
    form
      fieldset Animal Data Entry
        .row
          .small-3.columns
            label Species
            input#species(type='text', placeholder='Species')
          .small-3.columns
            label Color
            input#color(type='text', placeholder='Color')
           .small-3.columns
            label Age
            input#age(type='text', placeholder='Age')
          .small-3.columns
            label Gender
            input#gender(type='text', placeholder='Gender')
        .row
          .small-6.columns
            label Name
            input#name(type='text', placeholder='Name')
          .small-3.columns
            label Photo
            input#photo(type='text', placeholder='Photos')
          button#add-photo.tiny.radius Add Photo
        .row
          .small-6.columns
            label Description
            textarea#description(placeholder='Enter a description')
          .small-6.columns
            button#add-animal.tiny.radius Add Animal
        #photos
        .row  
          table#animal-table
            thead
              tr
                th Name
                th Species
                th Gender
                th Age
                th Color
                th Description
                th Photos
            tbody#tablebody
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/animal.js')
    script(src='/js/source/animal_factory.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()

